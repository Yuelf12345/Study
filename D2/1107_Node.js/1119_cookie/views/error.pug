script. 
    let timer = document.querySelector("span").innerText;
    timer = parseInt(timer)
    setInterval(()=>{
        timer--;
        document.querySelector("span").innerText = timer;
        if(timer < 1){
            window.location.href = "/login"
        }
    },1000)